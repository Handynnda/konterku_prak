<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/DefaultColor"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/menusaldo"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corner"
                    android:orientation="vertical"
                    android:elevation="10dp">

                    <TextView
                        android:id="@+id/textsaldo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:paddingStart="30dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:background="@drawable/rounded_corner3"
                        android:text="Saldo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/buttontopup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="14dp"
                        android:src="@drawable/ic_topup"
                        android:clickable="true"
                        android:focusable="true" >
                    </ImageView>

                        <TextView
                            android:id="@+id/textisi"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginStart="10dp"
                            android:textAlignment="textStart"
                            android:layout_marginTop="13dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:text="Rp.0" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/productLayout2"
                    android:layout_width="350dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corner"
                    android:orientation="vertical"
                    android:elevation="10dp">

                    <TextView
                        android:id="@+id/textPulsa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:background="@drawable/rounded_corner2"
                        android:text="Pulsa" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="90dp"
                        android:id="@+id/buttonPaxis"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_corner2"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imageProduk"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:src="@drawable/axis"/>

                        <TextView
                            android:id="@+id/textProduk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Axis"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:id="@+id/buttonPxl"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="25dp"
                        android:background="@drawable/rounded_corner2"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imageProduk2"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/xl"/>

                        <TextView
                            android:id="@+id/textProduk2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XL"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:id="@+id/buttonPindosat"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="25dp"
                        android:background="@drawable/rounded_corner2"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imageProduk3"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:src="@drawable/indosat"/>

                        <TextView
                            android:id="@+id/textProduk3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Im3"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@android:color/black" />

                    </LinearLayout>


                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="150dp"
                            android:id="@+id/buttonPtri"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical"
                            android:background="@drawable/rounded_corner2"
                            android:gravity="center"
                            android:padding="8dp">

                            <ImageView
                                android:id="@+id/imageProduk4"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:src="@drawable/tri"/>

                            <TextView
                                android:id="@+id/textProduk4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tri"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@android:color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:id="@+id/buttonPtelkomsel"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="20dp"
                            android:gravity="center"
                            android:background="@drawable/rounded_corner2"
                            android:padding="8dp">

                            <ImageView
                                android:id="@+id/imageProduk5"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:src="@drawable/telkomsel"/>

                            <TextView
                                android:id="@+id/textProduk5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Telkomsel"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@android:color/black" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/productLayout3"
                    android:layout_width="350dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corner"
                    android:orientation="vertical"
                    android:elevation="10dp">

                    <TextView
                        android:id="@+id/textKuota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:background="@drawable/rounded_corner2"
                        android:text="Kuota" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="90dp"
                            android:id="@+id/buttonKaxis"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:orientation="vertical"
                            android:background="@drawable/rounded_corner2"
                            android:gravity="center"
                            android:padding="8dp">

                            <ImageView
                                android:id="@+id/imagekuota"
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                android:src="@drawable/axis"/>

                            <TextView
                                android:id="@+id/textkuota"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Axis"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@android:color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="90dp"
                            android:id="@+id/buttonKxl"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="25dp"
                            android:background="@drawable/rounded_corner2"
                            android:gravity="center"
                            android:padding="8dp">

                            <ImageView
                                android:id="@+id/imagekuota2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/xl"/>

                            <TextView
                                android:id="@+id/textkuota2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="XL"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@android:color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="90dp"
                            android:id="@+id/buttonKindosat"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="25dp"
                            android:background="@drawable/rounded_corner2"
                            android:gravity="center"
                            android:padding="8dp">

                            <ImageView
                                android:id="@+id/imagekuota3"
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                android:src="@drawable/indosat"/>

                            <TextView
                                android:id="@+id/textkuota3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Im3"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@android:color/black" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="150dp"
                            android:id="@+id/buttonKtri"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical"
                            android:background="@drawable/rounded_corner2"
                            android:gravity="center"
                            android:padding="8dp">

                            <ImageView
                                android:id="@+id/imagekuota4"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:src="@drawable/tri"/>

                            <TextView
                                android:id="@+id/textkuota4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tri"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@android:color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:id="@+id/buttonKtelkomsel"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="20dp"
                            android:gravity="center"
                            android:background="@drawable/rounded_corner2"
                            android:padding="8dp">

                            <ImageView
                                android:id="@+id/imagekuota5"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:src="@drawable/telkomsel"/>

                            <TextView
                                android:id="@+id/textkuota5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Telkomsel"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@android:color/black" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>